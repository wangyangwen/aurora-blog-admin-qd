{"remainingRequest":"D:\\bk\\aurora-blog-admin-qd\\node_modules\\vue-loader\\lib\\index.js??vue-loader-options!D:\\bk\\aurora-blog-admin-qd\\src\\views\\posts\\PostEdit.vue?vue&type=style&index=0&id=0b5ee340&scoped=true&lang=css","dependencies":[{"path":"D:\\bk\\aurora-blog-admin-qd\\src\\views\\posts\\PostEdit.vue","mtime":1743696511464},{"path":"D:\\bk\\aurora-blog-admin-qd\\node_modules\\css-loader\\dist\\cjs.js","mtime":1743694597384},{"path":"D:\\bk\\aurora-blog-admin-qd\\node_modules\\vue-loader\\lib\\loaders\\stylePostLoader.js","mtime":1743694588723},{"path":"D:\\bk\\aurora-blog-admin-qd\\node_modules\\postcss-loader\\src\\index.js","mtime":1743694597267},{"path":"D:\\bk\\aurora-blog-admin-qd\\node_modules\\cache-loader\\dist\\cjs.js","mtime":1743694599572},{"path":"D:\\bk\\aurora-blog-admin-qd\\node_modules\\vue-loader\\lib\\index.js","mtime":1743694587864}],"contextDependencies":[],"result":[{"type":"Buffer","data":"base64:"},{"version":3,"sources":["PostEdit.vue"],"names":[],"mappings":";AAwOA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA","file":"PostEdit.vue","sourceRoot":"src/views/posts","sourcesContent":["<template>\r\n  <div class=\"post-edit-container\">\r\n    <div class=\"page-header\">\r\n      <h2>编辑文章</h2>\r\n      <div>\r\n        <el-button @click=\"$router.push('/posts')\">返回列表</el-button>\r\n        <el-button type=\"primary\" @click=\"savePost\" :loading=\"isLoading\">保存文章</el-button>\r\n      </div>\r\n    </div>\r\n\r\n    <el-row :gutter=\"20\">\r\n      <el-col :span=\"24\">\r\n        <el-card class=\"box-card\" v-loading=\"isLoading\">\r\n          <div v-if=\"!currentPost\" class=\"loading-placeholder\">\r\n            <p>正在加载文章内容...</p>\r\n          </div>\r\n          \r\n          <el-form v-else :model=\"postForm\" :rules=\"rules\" ref=\"postForm\" label-width=\"100px\">\r\n            <el-form-item label=\"文章标题\" prop=\"title\">\r\n              <el-input v-model=\"postForm.title\" placeholder=\"请输入文章标题\"></el-input>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"选择标签\" prop=\"tags\">\r\n              <el-select\r\n                v-model=\"postForm.tags\"\r\n                multiple\r\n                filterable\r\n                allow-create\r\n                default-first-option\r\n                placeholder=\"请选择标签（可多选）\"\r\n                style=\"width: 100%\"\r\n              >\r\n                <el-option\r\n                  v-for=\"tag in tags\"\r\n                  :key=\"tag.name\"\r\n                  :label=\"tag.name\"\r\n                  :value=\"tag.name\"\r\n                ></el-option>\r\n              </el-select>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"所属分类\" prop=\"categories\">\r\n              <el-select\r\n                v-model=\"postForm.categories\"\r\n                multiple\r\n                filterable\r\n                allow-create\r\n                default-first-option\r\n                placeholder=\"请选择分类（可多选）\"\r\n                style=\"width: 100%\"\r\n              >\r\n                <el-option\r\n                  v-for=\"category in categories\"\r\n                  :key=\"category\"\r\n                  :label=\"category\"\r\n                  :value=\"category\"\r\n                ></el-option>\r\n              </el-select>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"文章摘要\" prop=\"excerpt\">\r\n              <el-input\r\n                v-model=\"postForm.excerpt\"\r\n                type=\"textarea\"\r\n                :rows=\"2\"\r\n                placeholder=\"请输入文章摘要（可选）\"\r\n              ></el-input>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"文章内容\" prop=\"content\">\r\n              <div class=\"editor-wrapper\">\r\n                <div class=\"editor-area\">\r\n                  <textarea\r\n                    v-model=\"postForm.content\"\r\n                    placeholder=\"请输入Markdown格式的文章内容...\"\r\n                  ></textarea>\r\n                </div>\r\n                <div class=\"preview-area\">\r\n                  <div class=\"markdown-preview\" v-html=\"renderedContent\"></div>\r\n                </div>\r\n              </div>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"精选文章\">\r\n              <el-switch v-model=\"postForm.featured\"></el-switch>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"文章链接\">\r\n              <div class=\"post-link\">\r\n                <strong>Slug:</strong> {{ postForm.slug || '(自动生成)' }}\r\n              </div>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"创建时间\">\r\n              <div class=\"post-time\">{{ formatDate(currentPost.createdAt) }}</div>\r\n            </el-form-item>\r\n\r\n            <el-form-item label=\"更新时间\">\r\n              <div class=\"post-time\">{{ formatDate(currentPost.updatedAt) }}</div>\r\n            </el-form-item>\r\n          </el-form>\r\n        </el-card>\r\n      </el-col>\r\n    </el-row>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapGetters, mapActions } from 'vuex'\r\nimport { marked } from 'marked'\r\nimport moment from 'moment'\r\n\r\nexport default {\r\n  name: 'PostEdit',\r\n  props: {\r\n    slug: {\r\n      type: String,\r\n      required: true\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      postForm: {\r\n        title: '',\r\n        content: '',\r\n        tags: [],\r\n        categories: [],\r\n        excerpt: '',\r\n        featured: false,\r\n        slug: ''\r\n      },\r\n      // 分类列表（示例）\r\n      categories: ['博客', '教程', '笔记', '技术', '生活', '随笔'],\r\n      rules: {\r\n        title: [\r\n          { required: true, message: '请输入文章标题', trigger: 'blur' },\r\n          { min: 2, max: 100, message: '长度在 2 到 100 个字符', trigger: 'blur' }\r\n        ],\r\n        content: [\r\n          { required: true, message: '请输入文章内容', trigger: 'blur' }\r\n        ]\r\n      }\r\n    }\r\n  },\r\n  computed: {\r\n    ...mapGetters(['posts', 'tags', 'isLoading']),\r\n    // 当前编辑的文章\r\n    currentPost() {\r\n      return this.posts.find(post => post.slug === this.slug)\r\n    },\r\n    // 渲染的Markdown内容\r\n    renderedContent() {\r\n      return this.postForm.content ? marked(this.postForm.content) : ''\r\n    }\r\n  },\r\n  watch: {\r\n    // 当获取到文章数据后，填充表单\r\n    currentPost: {\r\n      handler(post) {\r\n        if (post) {\r\n          this.postForm = {\r\n            title: post.title || '',\r\n            content: post.content || '',\r\n            tags: post.tags || [],\r\n            categories: post.categories || [],\r\n            excerpt: post.excerpt || '',\r\n            featured: post.featured || false,\r\n            slug: post.slug || ''\r\n          }\r\n        }\r\n      },\r\n      immediate: true\r\n    }\r\n  },\r\n  created() {\r\n    this.fetchData()\r\n  },\r\n  methods: {\r\n    ...mapActions(['fetchPosts', 'fetchTags', 'updatePost']),\r\n    // 获取数据\r\n    async fetchData() {\r\n      try {\r\n        await Promise.all([\r\n          this.fetchPosts(),\r\n          this.fetchTags()\r\n        ])\r\n        \r\n        // 如果获取文章后仍然找不到当前文章\r\n        if (!this.currentPost) {\r\n          this.$message.error('未找到该文章')\r\n          this.$router.push('/posts')\r\n        }\r\n      } catch (error) {\r\n        this.$message.error('加载数据失败')\r\n        console.error('加载数据失败:', error)\r\n      }\r\n    },\r\n    // 格式化日期\r\n    formatDate(date) {\r\n      return date ? moment(date).format('YYYY-MM-DD HH:mm:ss') : '-'\r\n    },\r\n    // 保存文章\r\n    savePost() {\r\n      this.$refs.postForm.validate(async (valid) => {\r\n        if (valid) {\r\n          try {\r\n            await this.updatePost({\r\n              slug: this.slug,\r\n              postData: this.postForm\r\n            })\r\n            \r\n            this.$message({\r\n              type: 'success',\r\n              message: '文章更新成功！'\r\n            })\r\n            \r\n            // 留在当前页面，不跳转\r\n          } catch (error) {\r\n            this.$message.error('文章更新失败')\r\n            console.error('文章更新失败:', error)\r\n          }\r\n        } else {\r\n          this.$message.warning('请完善文章信息')\r\n          return false\r\n        }\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.post-edit-container {\r\n  padding-bottom: 20px;\r\n}\r\n\r\n.editor-wrapper {\r\n  height: calc(100vh - 540px);\r\n  min-height: 400px;\r\n}\r\n\r\n.loading-placeholder {\r\n  text-align: center;\r\n  padding: 40px 0;\r\n  color: #909399;\r\n}\r\n\r\n.post-link, .post-time {\r\n  color: #606266;\r\n  font-size: 14px;\r\n}\r\n</style> "]}]}